{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python C++ Debugger",
            "type": "pythoncpp",
            "request": "launch",
            "pythonLaunchName": "Python: test_pyd",
            "cppAttachName": "(gdb) Attach python3"
        },
        {
            "name": "(gdb) Attach python3",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/bazel-python_cpp_debug_example/external/python39_x86_64-unknown-linux-gnu/bin/python3",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap":{
                "/proc/self/cwd": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: test_pyd",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cpp_n_python/cpp_on_python/python_scripts/test_pyd.py",
            "python": "${workspaceFolder}/bazel-python_cpp_debug_example/external/python39_x86_64-unknown-linux-gnu/bin/python3",
            "cwd" :"${workspaceFolder}/bazel-out/k8-dbg/bin/cpp_n_python/cpp_on_python/python_scripts/test_pyd.runfiles",
            "console": "integratedTerminal"
        }
    ]
}
