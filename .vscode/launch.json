    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: add_test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/python/test/add_test.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/bazel-python_cpp_debug_example/external/python39_x86_64-pc-windows-msvc/python.exe",
            "cwd": "${workspaceFolder}/bazel-out/x64_windows-dbg/bin/python/test/add_test.exe.runfiles",
        },
        {
            "name": "Python: (Bazel) *_test.py",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/bazel-python_cpp_debug_example/external/python39_x86_64-pc-windows-msvc/python.exe",
            "cwd": "${workspaceFolder}/bazel-out/x64_windows-dbg/bin/${relativeFileDirname}/${fileBasenameNoExtension}.exe.runfiles",
            "env": {
                "PYTHON_RUNFILES": "${workspaceFolder}/bazel-out/x64_windows-dbg/bin/${relativeFileDirname}/${fileBasenameNoExtension}.exe.runfiles",
                "RUNFILES_MANIFEST_FILE": "${workspaceFolder}/bazel-out/x64_windows-dbg/bin/${relativeFileDirname}/${fileBasenameNoExtension}.exe.runfiles_manifest",
                "RUNFILES_DIR" : "${workspaceFolder}/bazel-out/x64_windows-dbg/bin/${relativeFileDirname}/${fileBasenameNoExtension}.exe.runfile"
            }
        },
    ]
}
